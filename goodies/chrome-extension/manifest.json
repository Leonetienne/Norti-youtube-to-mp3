{
  "manifest_version": 2,
  "name": "Tubio - Companion Extension",
  "version": "1.0",

  "icons": {
      "16": "icon/16.png",
      "48": "icon/48.png",
    "128": "icon/128.png"
  },

  "browser_action": {
    "default_popup": "popup/index.html"
  },

  "permissions": [
    "background",
    "contextMenus",
    "webRequest",
    "windows",
    "tabs",
    "storage",
    "*://*/*"
  ],

  "background": {
    "scripts": [
      "lib/axios.js",
      "queueDownload.js",
      "background.js"
    ]
  }
}
